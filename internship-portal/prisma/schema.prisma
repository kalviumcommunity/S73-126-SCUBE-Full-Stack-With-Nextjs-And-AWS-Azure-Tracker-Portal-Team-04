  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }

  model User {
    id    Int    @id @default(autoincrement())
    name  String
    email String @unique

    orders Order[]
  }

  model Project {
    id    Int    @id @default(autoincrement())
    title String
  }

  model Order {
    id        Int      @id @default(autoincrement())
    total     Int
    status    String
    createdAt DateTime @default(now())
    userId    Int

    user User @relation(fields: [userId], references: [id])

    @@index([userId])
    @@index([status])
  }
